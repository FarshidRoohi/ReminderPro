<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomItemView">
        <attr name="android:background" format="color"/>
        <attr name="item_icon" format="reference"/>
        <attr name="android:tint" format="color"/>
        <attr name="android:text" format="string"/>
        <attr name="item_radius" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomRecyclerView">
        <attr name="show_divider" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ZVToolbar">
        <attr name="zv_rightImage" format="reference"/>
        <attr name="zv_leftImage" format="reference"/>
        <attr name="zv_centerImage" format="reference"/>
        <attr name="zv_rightCaption" format="string"/>
        <attr name="zv_leftCaption" format="string"/>
        <attr name="zv_elementTint" format="color"/>
        <attr name="zv_font" format="string"/>
        <attr name="zv_caption" format="string"/>
    </declare-styleable>

    <declare-styleable name="CustomProgressCircle">
        <attr name="android:src" format="reference"/>
        <attr name="android:max" format="integer"/>
        <attr name="android:progress" format="integer"/>
        <attr name="android:tint" format="color"/>
    </declare-styleable>
</resources>